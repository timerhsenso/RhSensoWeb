@{
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
    ViewData["Title"] = "Não autenticado (401)";
}

<div class="content-wrapper p-3">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <h1 class="mb-0">
                        <i class="fas fa-lock me-2" aria-hidden="true"></i> Não autenticado (401)
                    </h1>
                    <p class="text-muted mb-0">Sua sessão pode ter expirado ou você não está logado.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="card card-outline card-info shadow-sm">
                        <div class="card-header">
                            <h3 class="card-title mb-0">Faça login para continuar</h3>
                        </div>
                        <div class="card-body" role="alert">
                            <p>Entre novamente para continuar de onde parou.</p>
                        </div>
                        <div class="card-footer d-flex flex-wrap gap-2">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Ir para o Login
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-home" aria-hidden="true"></i> Início
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
