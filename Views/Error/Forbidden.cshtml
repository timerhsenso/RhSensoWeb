@{
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
    ViewData["Title"] = "Acesso negado (403)";
}

<div class="content-wrapper p-3">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <h1 class="mb-0">
                        <i class="fas fa-ban me-2" aria-hidden="true"></i> Acesso negado (403)
                    </h1>
                    <p class="text-muted mb-0">Você não tem permissão para acessar este recurso.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="card card-outline card-danger shadow-sm">
                        <div class="card-header">
                            <h3 class="card-title mb-0">Permissões insuficientes</h3>
                        </div>
                        <div class="card-body" role="alert">
                            <p>Se você precisa desse acesso para seu trabalho, solicite a habilitação do módulo ou função.</p>
                        </div>
                        <div class="card-footer d-flex flex-wrap gap-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home" aria-hidden="true"></i> Início
                            </a>
                            <a asp-controller="Support" asp-action="AccessRequest" class="btn btn-outline-secondary">
                                <i class="fas fa-user-shield" aria-hidden="true"></i> Solicitar acesso
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
