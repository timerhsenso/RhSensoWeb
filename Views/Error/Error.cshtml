@{
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
    ViewData["Title"] = "Erro interno (500)";
    var requestId = ViewData["RequestId"] as string;
}

<div class="content-wrapper p-3">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <h1 class="mb-0">
                        <i class="fas fa-bug me-2" aria-hidden="true"></i> Erro interno (500)
                    </h1>
                    <p class="text-muted mb-0">Ocorreu um erro inesperado. Tente novamente em alguns instantes.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-10 col-xl-8">
                    <div class="card card-outline card-danger shadow-sm">
                        <div class="card-header">
                            <h3 class="card-title mb-0">Algo deu errado</h3>
                        </div>
                        <div class="card-body" role="alert">
                            <p>Se o problema persistir, entre em contato com o suporte informando o identificador da requisição.</p>

                            @if (!string.IsNullOrEmpty(requestId))
                            {
                                <div class="mt-2 d-flex align-items-center">
                                    <small class="text-muted">Id da requisição:&nbsp;</small>
                                    <code class="user-select-all mb-0">@requestId</code>
                                    <button type="button" class="btn btn-sm btn-outline-secondary ms-2"
                                            aria-label="Copiar identificador"
                                            onclick="navigator.clipboard.writeText('@requestId')">
                                        <i class="far fa-copy" aria-hidden="true"></i> Copiar ID
                                    </button>
                                </div>
                            }
                        </div>
                        <div class="card-footer d-flex flex-wrap gap-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home" aria-hidden="true"></i> Início
                            </a>
                            <a asp-controller="Support" asp-action="OpenTicket" class="btn btn-outline-secondary">
                                <i class="fas fa-life-ring" aria-hidden="true"></i> Reportar erro
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
