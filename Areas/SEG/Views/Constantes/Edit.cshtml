@model RhSensoWeb.Models.Const1
@{
    ViewData["Title"] = "Editar Constante";
    ViewData["SubTitle"] = "Seguran√ßa";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<div class="container-fluid">
    <h4 class="mb-3">@ViewData["Title"]</h4>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="All" class="alert alert-danger @(!ViewData.ModelState.IsValid ? "" : "d-none")"></div>

    <form asp-action="Edit" asp-route-id="@Model.Cdconstante" method="post" class="card">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Cdconstante" />
        <input type="hidden" asp-for="Id" />

        <div class="card-body">
            @await Html.PartialAsync("_FormFields", Model)
        </div>

        <div class="card-footer d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Salvar
            </button>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}