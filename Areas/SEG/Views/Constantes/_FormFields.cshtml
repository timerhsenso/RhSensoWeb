@* /Areas/SEG/Views/Constantes/_FormFields.cshtml *@
@model RhSensoWeb.Models.Const1
@{
    // Este partial NÃO deve declarar sections nem layout.
    // Use ViewData["IsEdit"] (bool) se precisar mudar algo entre Create/Edit.
    var isEdit = (bool?)ViewData["IsEdit"] == true;
}

<div class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label asp-for="Cdconstante" class="form-label">Código</label>
                @if (isEdit)
                {
                    <input asp-for="Cdconstante" class="form-control" readonly />
                }
                else
                {
                    <input asp-for="Cdconstante" class="form-control" />
                }
                <span asp-validation-for="Cdconstante" class="text-danger"></span>
            </div>

            <div class="col-md-5">
                <label asp-for="Dcconstante" class="form-label">Constante</label>
                <input asp-for="Dcconstante" class="form-control" maxlength="200" />
                <span asp-validation-for="Dcconstante" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Dcconteudo" class="form-label">Conteúdo</label>
                <input asp-for="Dcconteudo" class="form-control" maxlength="200" />
                <span asp-validation-for="Dcconteudo" class="text-danger"></span>
            </div>

            @* Campos auxiliares que você esconde na grade, mas pode editar aqui *@
            <div class="col-md-3">
                <label asp-for="Tpcampo" class="form-label">Tipo Campo</label>
                <input asp-for="Tpcampo" class="form-control" />
                <span asp-validation-for="Tpcampo" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Flalterar" class="form-label">Pode Alterar</label>
                <select asp-for="Flalterar" class="form-select">
                    <option value="">Selecione...</option>
                    <option value="S">Sim</option>
                    <option value="N">Não</option>
                </select>
                <span asp-validation-for="Flalterar" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Cdsistema" class="form-label">Sistema</label>
                <input asp-for="Cdsistema" class="form-control" />
                <span asp-validation-for="Cdsistema" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="Cdfuncao" class="form-label">Função</label>
                <input asp-for="Cdfuncao" class="form-control" />
                <span asp-validation-for="Cdfuncao" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Tipo" class="form-label">Tipo</label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="Config" class="form-label">Config.</label>
                <input asp-for="Config" class="form-control" />
                <span asp-validation-for="Config" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
