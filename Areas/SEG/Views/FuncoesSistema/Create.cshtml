@model RhSensoWeb.Models.Fucn1
@{
    ViewBag.Title = "Nova Função de Sistema";
    ViewBag.SubTitle = "Segurança";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

@section styles {


    <!-- Choices Plugin CSS-->
    <link rel="stylesheet" href="~/plugins/choices/choices.min.css">

    <!-- Tagify Plugin CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@yaireo/tagify@4.35.1/dist/tagify.min.css">

    <!-- Select Plugin CSS -->
    <link rel="stylesheet" href="~/plugins/select2/select2.min.css">

    <!-- Tagify Plugin CSS -->
    <link rel="stylesheet" href="~/plugins/tagify/tagify.css">

    <style>
        /* Apenas visual; o bloqueio real é no oninput + no controller */
        .text-uppercase {
            text-transform: uppercase;
        }
    </style>
}

<div class="container-fluid">
    <h4 class="mb-3">@ViewBag.Title</h4>

    <form asp-action="Create" method="post" class="card">
        @Html.AntiForgeryToken()

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-3">
                <!-- Sistema: só ativos (preenchido pelo helper PopulateSistemasSelectList) -->
                <div class="col-md-4">
                    <label asp-for="CdSistema" class="form-label">Sistema</label>
                                        
                        <select asp-for="CdSistema" asp-items="ViewBag.Sistemas" class="form-control select2" data-toggle="select2"  required>
                        <option value="">-- selecione --</option>
                    </select>
                    <span asp-validation-for="CdSistema" class="text-danger"></span>
                </div>

                <!-- CdFuncao: sempre MAIÚSCULO -->
                <div class="col-md-4">
                    <label asp-for="CdFuncao" class="form-label">Código da Função</label>
                    <input asp-for="CdFuncao"
                           class="form-control text-uppercase"
                           maxlength="30"
                           autocomplete="off"
                           spellcheck="false"
                           oninput="this.value=this.value.toUpperCase();" />
                    <span asp-validation-for="CdFuncao" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="DcFuncao" class="form-label">Descrição da Função</label>
                    <input asp-for="DcFuncao" class="form-control" maxlength="80" />
                    <span asp-validation-for="DcFuncao" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DcModulo" class="form-label">Módulo</label>
                    <input asp-for="DcModulo" class="form-control" maxlength="100" />
                    <span asp-validation-for="DcModulo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DescricaoModulo" class="form-label">Descrição do Módulo</label>
                    <input asp-for="DescricaoModulo" class="form-control" maxlength="100" />
                    <span asp-validation-for="DescricaoModulo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card-footer d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Choises.js Plugin Js -->
    <script src="~/plugins/choices/choices.min.js"></script>

    <!-- Tagify Plugin Js (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/tagify@4.35.1/dist/tagify.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@yaireo/dragsort@1.3.2/dist/dragsort.min.js"></script>

    <!-- Select2 Plugin Js -->
    <script src="~/plugins/select2/select2.min.js"></script>

    <!-- Choices Demo Js-->
    <script src="~/js/pages/form-choice.js"></script>

    <!-- Tagify Demo Js -->
    <script src="~/js/pages/form-tagify.js"></script>

    <!--Select 2 Demo js-->
    <script src="~/js/pages/form-select2.js"></script>

}