@model RhSensoWeb.Models.Tsistema
@{
    // Define via ViewData ao chamar a parcial (true no Edit, false no Create)
    var isEdit = (bool?)ViewData["IsEdit"] ?? false;
}

<div class="mb-3">
    <label asp-for="Cdsistema" class="form-label"></label>
    <!-- ✅ atributo nomeado; quando true o Razor renderiza readonly="readonly"; quando false remove -->
    <input asp-for="Cdsistema" class="form-control" readonly="@isEdit" />
    @* Mantém a PK no POST mesmo em modo somente leitura *@
    @if (isEdit)
    {
        <input type="hidden" asp-for="Cdsistema" />
    }
    <span asp-validation-for="Cdsistema" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Dcsistema" class="form-label"></label>
    <input asp-for="Dcsistema" class="form-control" />
    <span asp-validation-for="Dcsistema" class="text-danger"></span>
</div>

<div class="form-check mb-3">
    <input asp-for="Ativo" class="form-check-input" />
    <label asp-for="Ativo" class="form-check-label"></label>
    <span asp-validation-for="Ativo" class="text-danger"></span>
</div>
