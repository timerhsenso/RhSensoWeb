@model RhSensoWeb.Models.Btfuncao
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var isEdit = (bool)(ViewData["IsEdit"] ?? false);
    var sistemas = ViewData["Sistemas"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var funcoes = ViewData["Funcoes"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
    var acoes = ViewData["Acoes"] as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<div class="row g-3">
    <div class="col-md-4">
        <label class="form-label" for="selSistema">Sistema</label>
        @if (!isEdit)
        {
            <select asp-for="Cdsistema"
                    asp-items="sistemas"
                    class="form-select select2"
                    id="selSistema"
                    aria-label="Selecionar sistema">
                <option value="">Selecione...</option>
            </select>
        }
        else
        {
            <input class="form-control" value="@Model.Cdsistema" readonly aria-label="Sistema" />
            <input type="hidden" asp-for="Cdsistema" />
        }
        <span asp-validation-for="Cdsistema" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label" for="selFuncao">Função</label>
        @if (!isEdit)
        {
            <select asp-for="Cdfuncao"
                    asp-items="funcoes"
                    class="form-select select2"
                    id="selFuncao"
                    aria-label="Selecionar função">
                <option value="">Selecione...</option>
            </select>
        }
        else
        {
            <input class="form-control" value="@Model.Cdfuncao" readonly aria-label="Função" />
            <input type="hidden" asp-for="Cdfuncao" />
        }
        <span asp-validation-for="Cdfuncao" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Nmbotao" class="form-label"></label>
        <input asp-for="Nmbotao" class="form-control" readonly="@isEdit" aria-describedby="bto-ajuda" />
        <span id="bto-ajuda" class="form-text">Nome técnico do botão.</span>
        <span asp-validation-for="Nmbotao" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Dcbotao" class="form-label"></label>
        <input asp-for="Dcbotao" class="form-control" />
        <span asp-validation-for="Dcbotao" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label" for="selAcao">Ação</label>
        <select asp-for="Cdacao" asp-items="acoes" class="form-select" id="selAcao" aria-label="Selecionar ação">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="Cdacao" class="text-danger"></span>
    </div>
</div>
